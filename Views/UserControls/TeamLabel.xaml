<UserControl x:Class="Project.Views.UserControls.TeamLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="120">
    <Border BorderBrush="Black" BorderThickness="1.4,0,1.4,1.4">
        <Label Content="{Binding TeamName, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="40" Width="120"/>
    </Border>
</UserControl>
